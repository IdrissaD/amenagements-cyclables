{
   "$schema": "https://specs.frictionlessdata.io/schemas/table-schema.json",
   "name": "aménagements cyclables",
   "title": "Schéma d'aménagements cyclables",
   "description": "Spécification du schéma de données d'aménagements cyclables",
   "keywords": [
      "transport",
      "mobilité",
      "vélo",
      "aménagements cyclables"
   ],
   "countryCode": "FR",
   "homepage": "https://github.com/etalab/schema_amenagements_cyclables",
   "path": "https://github.com/etalab/schema_amenagements_cyclables/raw/master/schema.json",
   "licenses": [
      {
         "title": "Etalab Licence Ouverte 2.0",
         "name": "etalab-2.0",
         "path": "https://spdx.org/licenses/etalab-2.0.html"
      }
   ],
   "resources": [
      {
         "title": "Fichier valide (CSV)",
         "name": "exemple-valide-csv",
         "path": "https://github.com/etalab/schema_amenagements_cyclables/raw/master/exemple-valide.csv"
      }
   ],
   "created": "2020-09-18",
   "lastModified": "2020-09-18",
   "version": "0.1.0",
   "contributors": [
      {
         "title": "Miryad Ali",
         "email": "miryad.ali@beta.gouv.fr",
         "organisation": "transport.data.gouv.fr",
         "role": "author"
      },
      {
         "title": "Thomas Montaigne",
         "email": "thomas.montagne@velo-territoires.org",
         "organisation": "Association Vélo & Territoires",
         "role": "author"
      }
   ],
   "primaryKey" :"id",
   "fields": [
      {
         "name": "id",
         "description": "Identifiant unique défini par le Point d'Accès National",
         "example": "75114-AC-001",
         "type": "string",
         "constraints": {
            "required": true,
            "pattern": "^([013-9]\\d|2[AB1-9])\\d{3}-AC-\\d{3}$"
         }
      },
      {
         "name": "id_osm",
         "description": "Identifiant de l'aménagement sur OSM",
         "example": "7746952719",
         "type": "string",
         "constraints": {
            "required": false
         }
      },
      {
         "name": "id_local",
         "description": "Identifant local de l'aménagement",
         "example": "45E1S29",
         "type": "string",
         "constraints": {
            "required": false
         }
      },
      {
         "name": "code_com",
         "description": "Code INSEE de la commune (5 chiffres)",
         "example": "75114",
         "type": "string",
         "constraints": {
            "required": true,
            "pattern": "^([013-9]\\d|2[AB1-9])\\d{3}"
         }
      },
      {
         "name": "geo_shape",
         "description": "Longitude et latitude du segment exprimées dans le système de coordonnées WGS84",
         "example": "[[3.951473236083984,46.720681612190916] ; [3.952159881591797,46.7316838899417]]",
         "type": "string"
      },
      {
         "name": "num_iti",
         "description": "Numéro des itinéraires, des EuroVelo au schéma départementaux, auxquels le segment appartient. Les numéros doivent être séparés par le caractère \":\"",
         "example": "EV1:EV6:V45",
         "type": "string",
         "constraints": {
            "required": false
         }
      },
      {
         "name": "reseau_loc",
         "description": "Type de réseau structurant local auquel l'aménagement appartient",
         "example": "Structurant",
         "type": "string",
         "constraints": {
            "required": false,
            "enum": [
               "REV",
               "Structurant",
               "Autre"
            ]
         }
      },
      {
         "name": "nom_loc",
         "description": "nom et numéro des itinéraires locaux. Les numéros doivent être séparés par le caractère \":\"",
         "example": "",
         "type": "string",
         "constraints": {
            "required": false
         }
      },
      {
         "name": "ame_d",
         "description": "Type d'aménagement présent sur la voie de droite",
         "example": "Bande cyclable",
         "type": "string",
         "constraints": {
            "required": true,
            "enum": [
               "Piste cyclable",
               "Bande cyclable",
               "Double sens cyclable piste",
               "Double sens cyclable bande",
               "Voie verte",
               "Vélo rue",
               "Couloir bus-vélo",
               "Rampe",
               "Goulotte",
               "Aménagements mixtes piéton/vélo hors voie verte",
               "Chaussée à voie centrale banalisée (chaucidou)",
               "Accotement revêtu hors CVCB",
               "Autre"
            ]
         }
      },
      {
         "name": "regime_v_d",
         "description": "Régime présent sur la voie de droite",
         "example": "Aire piétonne",
         "type": "string",
         "constraints": {
            "required": false,
            "enum": [
               "Zone 30",
               "Aire piétonne",
               "Zone de rencontre",
               "En agglomération",
               "Hors agglomération",
               "Autre"
            ]
         }
      },
      {
         "name": "sens_v_d",
         "description": "Sens de circulation pour les cyclistes sur la voie de droite",
         "example": "Unidirectionnel",
         "type": "string",
         "constraints": {
            "required": false,
            "enum": [
               "Unidirectionnel",
               "Bidirectionnel"
            ]
         }
      },
      {
         "name": "largeur_d",
         "description": "Largeur hors marquage minimale utile de la voie de droite réservée au cycliste, en mètre. La largeur du marquage est exclue",
         "example": 3,
         "type": "number",
         "constraints": {
            "required": false
         }
      },
      {
         "name": "ame_g",
         "description": "Type d'aménagement présent sur la voie de gauche",
         "example": "Bande cyclable",
         "type": "string",
         "constraints": {
            "required": true,
            "enum": [
               "Piste cyclable",
               "Bande cyclable",
               "Double sens cyclable piste",
               "Double sens cyclable bande",
               "Voie verte",
               "Vélo rue",
               "Couloir bus-vélo",
               "Rampe",
               "Goulotte",
               "Aménagements mixtes piéton/vélo hors voie verte",
               "Chaussée à voie centrale banalisée (chaucidou)",
               "Accotement revêtu hors CVCB",
               "Autre"
            ]
         }
      },
      {
         "name": "regime_v_g",
         "description": "Régime présent sur la voie de gauche",
         "example": "Aire piétonne",
         "type": "string",
         "constraints": {
            "required": false,
            "enum": [
               "Zone 30",
               "Aire piétonne",
               "Zone de rencontre",
               "En agglomération",
               "Hors agglomération",
               "Autre"
            ]
         }
      },
      {
         "name": "sens_v_g",
         "description": "Sens de circulation pour les cyclistes sur la voie de gauche",
         "example": "Unidirectionnel",
         "type": "string",
         "constraints": {
            "required": false,
            "enum": [
               "Unidirectionnel",
               "Bidirectionnel"
            ]
         }
      },
      {
         "name": "largeur_g",
         "description": "Largeur hors marquage minimale utile de la voie de gauche réservée au cycliste, en mètre. La largeur du marquage est exclue",
         "example": 3,
         "type": "number",
         "constraints": {
            "required": false
         }
      },
      {
         "name": "local_ame",
         "description": "Emplacement de l'aménagement",
         "example": "Trottoir",
         "type": "string",
         "constraints": {
            "required": false,
            "enum": [
               "Trottoir",
               "Chaussée"
            ]
         }
      },
      {
         "name": "statut",
         "description": "Niveau de réalisation de l'infrastructure",
         "example": "En travaux",
         "type": "string",
         "constraints": {
            "required": false,
            "enum": [
               "En travaux",
               "En service",
               "Provisoire"
            ]
         }
      },
      {
         "name": "roulable",
         "description": "Accessibilité des amanégements par type de véhicule à deux roues non motorisé",
         "example": "VTT",
         "type": "string",
         "constraints": {
            "required": false,
            "enum": [
               "Roller",
               "VTT",
               "VTC",
               "Vélo de route"
            ]
         }
      },
      {
         "name": "date_maj",
         "description": "Date de dernière mise à jour des données du segment  Notation ISO 8601, format AAAA-MM-DD",
         "example": "2020-08-15",
         "type": "string",
         "constraints": {
            "required": false
         }
      },
      {
         "name": "trafic_vitesse",
         "description": "Vitesse maximale autorisée pour le trafic adjacent à l'aménagement, en km/h. La vitesse 10 km/h correspond à une vitesse à l'allure du pas",
         "example": "80",
         "type": "string",
         "constraints": {
            "required": true,
            "enum": [
               "10",
               "20",
               "30",
               "40",
               "45",
               "50",
               "70",
               "80",
               "90",
               ">90"
            ]
         }
      },
      {
         "name": "lumiere",
         "description": "Aménagement éclairé",
         "example": "VRAI",
         "type": "string",
         "constraints": {
            "required": false,
            "enum": [
               "VRAI",
               "FAUX"
            ]
         }
      },
      {
         "name": "d_service",
         "description": "Date de mise en oeuvre de l'aménagement (AAAA)",
         "example": "2015",
         "type": "number",
         "constraints": {
            "required": false
         }
      },
      {
         "name": "comm",
         "description": "Remarques éventuelles au sujet de l'aménagement",
         "example": "forte pente sur 10 mètres",
         "type": "string",
         "constraints": {
            "required": false
         }
      }
   ]
}
